<h2>注文履歴一覧</h2>

<table>
  <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% @orders.each do |order| %>
        <td><%= order.created_at %></td>
        <td><%= order.shipping_name %></td>
        <td>
          <% total=0 %>
          <% order.order_details.each do |order_detail| %>
            <% total+=order_detail.amount %>
          <% end %>
          <%= total %>
        </td>
        <td><%= order.is_receive %></td>
      <% end %>
    </tr>
  </tbody>
</table>

