<h2><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h2>

<%= form_with model: @customer, url: admin_customer_path(@customer.id) do |f| %>

  <div>
    <span>会員ID</span>
    <span><%= @customer.id %></span>
  </div>

  <div>
    <span>氏名</span>
    <span><%= f.text_field :last_name %></span>
    <span><%= f.text_field :first_name %></span>
  </div>

  <div>
    <span>フリガナ</span>
    <span><%= f.text_field :last_name_kana %></span>
    <span><%= f.text_field :first_name_kana %></span>
  </div>

  <div>
    <span>郵便番号</span>
    <span><%= f.text_field :postal_code %></span>
  </div>

  <div>
    <span>住所</span>
    <span><%= f.text_field :address %></span>
  </div>

  <div>
    <span>電話番号</span>
    <span><%= f.text_field :telephone_number %></span>
  </div>

  <div>
    <span>メールアドレス</span>
    <span><%= f.text_field :email %></span>
  </div>

  <div>
    <span>会員ステータス</span>
    <span><%= f.radio_button :is_deleted, :true %>有効</span>
    <span><%= f.radio_button :is_deleted, :false %>退会</span>
  </div>

  <div>
    <%= f.submit "変更を保存" %>
  </div>

<% end %>