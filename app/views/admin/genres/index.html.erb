<h2>ジャンル一覧・追加</h2>

<%= form_with model: @genre, url: admin_genres_path do |f| %>

  <div>
    <span>ジャンル名</span>
    <span><%= f.text_field :name %></span>
    <span><%= f.submit "新規登録", class: "btn btn-success" %></span>
  </div>

<% end %>

<table class="table">
  <thead>
    <tr>
      <th><h3>ジャンル</h3></th>
    </tr>
  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
      </tr>
    <% end %>
  </tbody>
</table>