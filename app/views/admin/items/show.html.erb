<h2>商品詳細</h2>

<div class="container">
  <div class="row">
    <div class="col-4">
      <%= image_tag @item.item_image, :size => '300x200' %>
    </div>

    <div class="col-8">
      <div>
        <span>商品名</span>
        <span><%= @item.name %></span>
      </div>
      <div>
        <span>商品説明</span>
        <span><%= @item.introduction %></span>
      </div>
      <div>
        <span>ジャンル</span>
        <span><%= @item.genre.name %></span>
      </div>
      <div>
        <span>税込価格<br>(税抜価格)</span>
        <span><%= @item.price %>(<%= @item.price %>)円</span>
      </div>
      <div>
        <span>販売ステータス</span>
        <% if @item.is_active == true %>
          <span class="text-success"><strong>販売中</strong></spanp>
        <% else %>
          <span class="text-secondary"><strong>販売停止中</strong></spanp>
        <% end %>
      </div>
    </div>

    <div class="mx-auto">
      <%= link_to "編集する", edit_admin_item_path, class: "btn btn-success" %>
    </div>
  </div>
</div>
