<h2>
  <span>商品一覧</span>
  <span><%= link_to "+", new_admin_item_path, class: "btn btn-light" %></span>
</h2>

<table class="table">
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td><%= link_to item.name, admin_item_path(item.id), class: "text-dark" %></td>
        <td><%= item.price %></td>
        <td><%= item.genre_id %></td>
        <td>
          <% if item.is_active == true %>
            <p class="text-success"><strong>販売中</strong></p>
          <% else %>
            <p class="text-secondary"><strong>販売停止中</strong></p>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
