<h2>ショッピングカート</h2>
<div><%= link_to "カートを空にする", cart_items_destroy_all_path, method: :delete %></div>

<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.price %></td>
        <% item.cart_items.each do |cart_item| %>
          <td><%= cart_item.amount %></td>
          <td><%= item.price*cart_item.amount %></td>
        <% end %>
        <td><%= link_to "削除する", cart_item_path, method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div><%= link_to "買い物を続ける", items_path %></div>

<div>
  <span>合計金額</span>
  <span>
    <% @items.each do |item| %>
      <% item.cart_items.each do |cart_item| %>
        <%= +=item.price*cart_item.amount %>
      <% end %>
    <% end %>
  </span>
</div>

<div><%= link_to "情報入力に進む", new_order_path %></div>