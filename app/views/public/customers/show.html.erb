<h2>マイページ</h2>

<div>
 <span><strong>登録情報</strong></span>
 <span><%= link_to "編集する", edit_customers_path, class: "btn btn-success" %></span>
</div>

<div>
  <span>氏名</span>
  <span><%= @customer.last_name %><%= @customer.first_name %></span>
</div>
<div>
  <span>カナ</span>
  <span><%= @customer.last_name_kana %><%= @customer.first_name_kana %></span>
</div>
<div>
  <span>郵便番号</span>
  <span><%= @customer.postal_code %></span>
</div>
<div>
  <span>住所</span>
  <span><%= @customer.address %></span>
</div>
<div>
  <span>電話番号</span>
  <span><%= @customer.telephone_number %></span>
</div>
<div>
  <span>メールアドレス</span>
  <span><%= @customer.email %></span>
</div>

<div>
 <span><strong>配送先</strong></span>
 <span><%= link_to "一覧を見る", addresses_path, class: "btn btn-primary" %></span>
</div>

<div>
 <span><strong>注文履歴</strong></span>
 <span><%= link_to "一覧を見る", orders_path, class: "btn btn-primary" %></span>
</div>