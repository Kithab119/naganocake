<h2>会員情報編集</h2>

<%= form_with model: @customer, url: customers_path do |f| %>
  <div>
    <span>氏名</span>
    <span><%= f.text_field :last_name %><%= f.text_field :first_name %></span>
  </div>
  <div>
    <span>フリガナ</span>
    <span><%= f.text_field :last_name_kana %><%= f.text_field :first_name_kana %></span>
  </div>
  <div>
    <span>郵便番号</span>
    <span><%= f.text_field :postal_code %></span>
  </div>
  <div>
    <span>住所</span>
    <span><%= f.text_field :address %></span>
  </div>
  <div>
    <span>電話番号</span>
    <span><%= f.text_field :telephone_number %></span>
  </div>
  <div>
    <span>メールアドレス</span>
    <span><%= f.text_field :email %></span>
  </div>
  <div>
    <span><%= f.submit "編集内容を保存", class: "btn btn-success" %></span>
    <span><%= link_to "退会する", customers_out_path, class: "btn btn-danger"  %></span>
  </div>
<% end %>